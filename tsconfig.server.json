{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist/server",
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules", "src", "dist"]
}
